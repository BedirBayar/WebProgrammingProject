@model Computer
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Home" asp-action="Details" asp-route-id="">@Model.ModelName</a>
            </h3>

        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="Home" asp-action="addToCart" asp-route-id="@Model.ID">
                    Sepete Ekle
                </a>
                <a asp-action="addToCompare" asp-route-id="@Model.ID" class="btn btn-sm btn-outline-secondary">Karşılaştırmaya Ekle</a>
                <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-sm btn-outline-secondary">Detaylar</a>
            </p>
        </div>
    </div>
</div>
